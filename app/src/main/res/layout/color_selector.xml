<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/colorSelectorArrowLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/go_left"
        android:padding="14dp"
        android:src="@drawable/ic_baseline_keyboard_arrow_left_24" />

    <View
        android:id="@+id/selectedColor"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_margin="14dp" />

    <ImageView
        android:id="@+id/colorSelectorArrowRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/go_right"
        android:padding="14dp"
        android:src="@drawable/ic_baseline_keyboard_arrow_right_24" />

    <CheckBox
        android:id="@+id/colorEnabled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enabled"
        android:layout_gravity="center_vertical"/>

</merge>